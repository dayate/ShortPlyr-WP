{
  "name": "shortplyr",
  "version": "1.0.0",
  "description": "Video Player Streaming For Short Drama China",
  "main": "index.js",
  "scripts": {
    "dev": "tailwindcss -i ./src/css/input.css -o ./assets/css/main.min.css --watch",
    "clean": "rimraf ./assets/css/main.min.css ./assets/js/main.min.js",
    "build-css": "tailwindcss -i ./src/css/input.css -o ./assets/css/main.min.css --minify",
    "build-js": "esbuild ./src/js/main.js --bundle --minify --outfile=./assets/js/main.min.js",
    "build": "npm run clean && npm run build-css && npm run build-js",
    "format": "prettier --write .",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dayate/ShortPlyr-WP.git"
  },
  "keywords": [
    "wordpress-theme",
    "video-player",
    "tailwindcss"
  ],
  "author": "Your Name or Company",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/dayate/ShortPlyr-WP/issues"
  },
  "homepage": "https://github.com/dayate/ShortPlyr-WP#readme",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "xgplayer": "^3.0.13"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.10",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.5.6",
    "postcss-url": "^10.1.3",
    "prettier": "^3.3.3",
    "remixicon": "^4.3.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.13"
  }
}
